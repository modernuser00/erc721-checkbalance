{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es2021",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}